<!--music.wxml--> 
<view class="root">
  <text class="breadcrumbs">网易云音乐</text>
  <view class="swiper-tab">  
    <view class="swiper-tab-list {{currentTab==0 ? 'hover' : ''}}" data-current="0" bindtap="switchTab">个性推荐</view>  
    <view class="swiper-tab-list {{currentTab==1 ? 'hover' : ''}}" data-current="1" bindtap="switchTab">歌单</view>  
    <view class="swiper-tab-list {{currentTab==2 ? 'hover' : ''}}" data-current="2" bindtap="switchTab">主播电台</view>
    <view class="swiper-tab-list {{currentTab==3 ? 'hover' : ''}}" data-current="3" bindtap="switchTab">排行榜</view>
  </view>
  <swiper current="{{currentTab}}" duration="300" bindchange="bindChange">
    <swiper-item>我是个性推荐~~</swiper-item>
    <swiper-item>我是歌单~~</swiper-item>
    <swiper-item>我是主播啦~~</swiper-item>
    <swiper-item>我是至尊排行榜~~</swiper-item>
  </swiper> 
</view>
